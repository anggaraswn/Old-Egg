type Product {
    id: ID!
    name: String!
    images: String!
    price: Float!
    discount: Int!
    rating: Int!
    stock: Int!
    description: String!
    numberOfReviews: Int!
    numberBought: Int!
    category: Category! @goField(forceResolver: true)
    store: Store! @goField(forceResolver: true)
}

type Category {
    id: ID!
    name: String!
    description: String!
}

extend type Query {
    product(id: ID!): Product!
    products(storeID: ID, limit: Int, topSold: Boolean): [Product!]!
}

extend type Mutation {
    createProduct(input: NewProduct!): Product!
}

input NewProduct {
    name: String!
    categoryID: ID!
    storeID: ID!
    image: String!
    description: String!
    price: Int!
    stock: Int!
    details: String!
}

input NewCategory {
    name: String!
    description: String!
}
